@model IEnumerable<crudtask2.Models.depart>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

}



<div class="page-header">
    <h2>List Of Departments </h2>
</div>
<div class="row">
<table class="table table-striped ">
    <tr>
        <th>@Html.DisplayNameFor(m => m.Id)</th>
        <th>@Html.DisplayNameFor(m => m.Name)</th>
        <th>@Html.DisplayNameFor(m => m.Location)</th>
        <th></th>

    </tr>
    @{
        foreach (var data in Model)
        {
            <tr>
                <td>@Html.DisplayFor(m => data.Id)</td>
                <td>@Html.DisplayFor(m => data.Name)</td>
                <td>@Html.DisplayFor(m => data.Location)</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = data.Id }, new { @class = "btn btn-info" }) 
                    @Html.ActionLink("Display", "Display", new { id = data.Id }, new { @class = "btn btn-info" }) 
                    @Html.ActionLink("Delete", "Delete", new { id = data.Id },new { onclick="return confirm('Are you sure?')",@class="btn btn-danger"})
                </td>
            </tr>

        }
    }
    
</table>
    </div>
<br />
<h4>@Html.ActionLink("AddDepartment", "Create", new { area = "" }, new { @class = "btn btn-primary" })</h4>