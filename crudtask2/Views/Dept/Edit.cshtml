@model crudtask2.Models.depart
@{
    ViewBag.title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="page-header">Edit</h2>
@using (Html.BeginForm("Edit", "Dept", FormMethod.Post, htmlAttributes: new { onsubmit = "Updated()" }))
{
    @Html.HiddenFor(m => m.Id)
    <div class="row">
        <div class="form-horizontal">


            <div class="form-group">
                @Html.LabelFor(m => m.Name, htmlAttributes: new { @class = "control-label col-xs-2" })

                <div class="col-xs-10">
                    @*<span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>*@
                    @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })
                </div>



            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Location, htmlAttributes: new { @class = "control-label col-xs-2" })
                <div class="col-xs-10">
                    @Html.EditorFor(m => m.Location, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div >
                <input type="submit" value="Update" class="btn btn-primary col-xs-offset-2 " />
                @Html.ActionLink("Back to List", "Index", new { area = "" }, new { @class = "btn btn-primary" })

            </div>
        </div>

    </div>


}

<div>

</div>




@{
    <script type="text/javascript">
        function Updated() {
            alert("record is updated successfully");
        }
    </script>
}











