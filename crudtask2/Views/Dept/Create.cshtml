@model crudtask2.Models.depart
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add Department</h2>


    @using (Html.BeginForm("Create","Dept",FormMethod.Post,htmlAttributes:new {onsubmit="record()"}))
    {
<div class="form-horizontal">
    <div class="form-group">
        @Html.LabelFor(m => m.Id, htmlAttributes: new { @class = "control-label col-xs-2" })
