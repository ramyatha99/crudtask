        </div>



    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Name, htmlAttributes: new { @class = "control-label col-xs-2" })
        <div class="col-xs-10">
            @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.Id)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Location, htmlAttributes: new { @class = "control-label col-xs-2" })
        <div class="col-xs-10">
            @Html.EditorFor(m => m.Location, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.Id)
        </div>
    </div>



    
    <div class="col-xs-2 col-xs-offset-2" >
        <input type="submit" value="Add" class="btn btn-primary "  />
        
        
    </div>
</div>

        
    }
<br />
