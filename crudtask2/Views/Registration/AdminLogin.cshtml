
@model crudtask2.Models.admin
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <style>
        #login-admin
        {
            background-color:rgb(206, 206, 231);
            height:auto;
            margin-top:20px;
        }
    </style>
</head>
<div class="row">
    <div class="col-xs-6 col-xs-offset-3" id="login-admin">
        @using (Html.BeginForm())
        {
            <h2 style="text-align:center;color:blue">Admin login</h2>
            <div class="form-horizontal">
                <div class="form-group">
                    <div class="input-group col-xs-6 col-xs-offset-3">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control", @placeholder = "username" } })
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group col-xs-6 col-xs-offset-3">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                        @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "form-control", @placeholder = "password" } })
                    </div>
                </div>
                <div class="input-group col-xs-6 col-xs-offset-3">
                    @Html.CheckBox("Remember Me")
                    @Html.Label("Remember Me")
                </div><br />
                <div class="form-group">
                    <button type="submit" class="btn btn-primary col-xs-6 col-xs-offset-3" >Login</button>
                </div>
                <div class="col-xs-6 col-xs-offset-3">
                    <div style="text-align:center">
                        Don't have account?@Html.ActionLink("Signup here", "Signup", "Registration")<br />
                        @Html.ActionLink("Forgot Password?", "", "")
                    </div>
                </div>
            </div>
        }
    </div>
</div>