@model crudtask2.Models.student
@{
    ViewBag.Title = "Students";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <h2>List Of Students</h2>
</div>


@using (Html.BeginForm())
{
    <div class="row">
        <div class="form-horizontal">
            <div class="form-group">
                @Html.LabelFor(m => m.DeptId, "DeptId", htmlAttributes: new { @class = "control-label col-xs-3" })
                <div class="col-xs-9">
                    @Html.DropDownList("DeptId", null, "select", htmlAttributes: new { @class = "form-control" })

                </div>
            </div>
            <div>
                <input type="submit" value="Submit" class="btn btn-primary col-xs-offset-4" />
            </div>
            <hr />

        </div>
    </div>
    <div class="row">
        <div>
            @if (ViewBag.data != null)
            {
            <table class="table table-striped">
                <tr>
                    <th>@Html.DisplayNameFor(m => m.FirstName)</th>
                    <th>@Html.DisplayNameFor(m => m.LastName)</th>
                    <th>@Html.DisplayNameFor(m => m.Email)</th>
                    <th>@Html.DisplayNameFor(m => m.PhNo)</th>
                    <th>@Html.DisplayNameFor(m => m.DeptId)</th>
                </tr>

                @foreach (var data in ViewBag.data)
                {
                    <tr>
                        <td>@data.FirstName</td>
                        <td>@data.LastName</td>
                        <td>@data.Email</td>
                        <td>
                            @data.PhNo
                        </td>
                        <td>@data.depart.Name</td>
                    </tr>

                }

            </table>
            }
            @if(ViewBag.dt =="i")
            {
                <script>
                    alert("No student enrolled for this department");
                </script>
            }
        </div>
    </div>

}






