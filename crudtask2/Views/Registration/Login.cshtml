@model crudtask2.Models.student
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .login-first{
        margin:300px;
        width:300px;
        height:auto;
        border:5px solid red;
    }

</style>
<div style="margin-top:50px">

@using (Html.BeginForm())
{
<div class="row">
    <div class="col-xs-4 col-xs-offset-4" style="background-color:rgb(0, 0, 0,0.3)">
        <h2 style="text-align:center;color:blue">Login</h2>
        <div class="form-horizontal" style="height:200px">
            <br />

            <div class="form-group">
                @Html.LabelFor(m => m.Email, htmlAttributes: new { @class = "control-label col-xs-3" })

                <div class="col-xs-9">
                    @*<span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>*@
                    @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control" } })
                </div>



            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password, htmlAttributes: new { @class = "control-label col-xs-3" })
                <div class="col-xs-9">
                    @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                @*@Html.CheckBox("Remember Me",false, htmlAttributes: new { @class = " col-sm-5" })<span>Remember Me</span><br />*@
                <input type="submit" value="Login" class="btn btn-primary col-xs-offset-4 " />
                @Html.ActionLink("Cancel", "Home", "Dept", new { area = "" }, new { @class = "btn btn-primary col-xs-offset-1 " })

            </div>

            <div style="text-align:center">
                Don't have account?@Html.ActionLink("Signup here","Signup", "Registration")
            </div>



            @*<div class="col-sm-2 col-sm-offset-2">
                <input type="submit" value="Login" class="btn btn-primary " />


            </div>*@
        </div>
        @{
            if (ViewBag.finding == "f")
            {
                <p style="text-align:center;color:red;">Invalid Id or Password</p>
                @*<p class="text-danger">Invalid Id or Password</p>*@
            }
            if (ViewBag.finding == "g")
            {
                <script type="text/javascript">
                    alert("Log in success");
                </script>
            }

        }
    </div>
   

</div>

}
<br />
<br />
    </div>